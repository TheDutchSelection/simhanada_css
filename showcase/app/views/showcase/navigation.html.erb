<%= showcase_example do %>
  <nav class="top-nav">
    <div class="top-nav__layout">
      <ul class="top-nav__list">
        <li class="top-nav__item">
          <a href="#">Apples</a>
        </li>
        <li class="top-nav__item top-nav__item--selected">
          <a href="#">Oranges</a>
        </li>
        <li class="top-nav__item">
          <a href="#">Bananas</a>
        </li>
      </ul>
    </div>
  </nav>
<% end %>


